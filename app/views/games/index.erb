<h3>Join a Game Near You</h3>

<section class='scheduled-games'>
<h4>Scheduled Games</h4>

<% @scheduled_games.each do |game| %>
<a href='/games/<%= game.id %>' class='game_summary'>
  <section class='game-index-page-interact-buttons'
    <img class='game-image-small' src=<%= game.image_path %>>
  </section>
  <section class='game-index-page-games'>
    <h1><%= game.name %></h1>
    <h2><%= game.tagline %></h2>
    <h2><%= game.city %>, <%= game.state %></h2>
    <h1><%= game.start_date %> TO <%= game.end_date %></h1>
    <form class="button" action='/enrollment' method='post'>
      <input type='hidden' value='<%= game.id %>' name='game_id'>
      <input type='submit' value='Join' name='join_game_button'>
    </form>
  </section>
</a>
<% end %>
</section>

